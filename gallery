'use client'
import React, { useState, useEffect } from 'react';
import { Image } from 'react-bootstrap';
import Container from 'react-bootstrap';
import Link from 'next/link'
import EventGalleryBanner from '../../components/EventGalleryComponents/EventGalleryBanner';
import Header from '../../components/Shared/Header'
import EventGalleryBannerContent from '../../components/EventGalleryComponents/EventGalleryBannerContent';


const EventGalleryFront = () => {
  const [data, setData] = useState([]);

  const Acf_URL = 'https://ficac.ivistaz.co/wp-json/wp/v2/events_gallery?_embed?slug=latin-america-conference-honduras';

  const fetchPosts = async () => {
    try {
      const result = await fetch(Acf_URL);

      if (!result.ok) {
        throw new Error(`HTTP error! Status: ${result.status}`);
      }

      const postsData = await result.json();
      console.log('API Response:', postsData);

      if (typeof postsData === 'object') {
        setData(postsData);
      }
    } catch (error) {
      console.error('Error fetching posts', error);
    }
  };

  useEffect(() => {
    fetchPosts();
  }, []);

  return (
    <>
    <Header />
    <EventGalleryBanner />
    <EventGalleryBannerContent />
    <Container>
    <div>
      {data.map((item) => (
        <div key={item.id}>
          <h3>{item.title.rendered}</h3>
          {/* <Link href={`/gallery/${item.slug}`}></Link> */}
          <Link href={`/gallery/${item.slug}`}>View Photos</Link>
        </div>
      ))}
    </div>
    </Container>
    </>
  );
};

export default EventGalleryFront;